<?xml version="1.0" encoding="UTF-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/srl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.funactivity.util.MyScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F1EF">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/bottom_round"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/textStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="20dp"
                android:text="5t5"
                android:textSize="30sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/teStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你已完成"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_activitynum"
                    style="@style/teStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp" />

                <TextView
                    style="@style/teStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="次活动"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="105dp"
            android:background="@drawable/round"
            android:orientation="vertical"></LinearLayout>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/iv_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="115dp"
            app:civ_border="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_image"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_qianming"
                    style="@style/teStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="越自律，越自由" />

                <ImageView
                    android:layout_marginTop="20dp"
                    android:id="@+id/iv_editqianming"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@id/tv_qianming"
                    android:src="@drawable/edit" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/btn_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp">

                    <ImageView
                        android:id="@+id/btn_1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/handup3" />

                    <TextView
                        style="@style/teStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btn_1"
                        android:layout_centerHorizontal="true"
                        android:text="已报名" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/btn_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="80dp">

                    <ImageView
                        android:id="@+id/btn_2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/shoucang" />

                    <TextView
                        style="@style/teStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btn_2"
                        android:layout_centerHorizontal="true"
                        android:text="已收藏" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:id="@+id/btn_3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/settings" />

                    <TextView
                        android:id="@+id/tv_setting"
                        style="@style/teStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn_3"
                        android:layout_centerHorizontal="true"
                        android:text="设置" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                style="@style/textStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="我的发布"
                android:layout_marginLeft="20dp"
                android:textSize="28sp" />

            <com.example.funactivity.util.MyGridView
                android:id="@+id/gv_release"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnWidth="120dp"
                android:numColumns="2" />

        </LinearLayout>

    </RelativeLayout>
    </com.example.funactivity.util.MyScrollView>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>