<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:background="@color/zong"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_timeup"/>
    </RelativeLayout>
<RelativeLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_style"
    android:layout_margin="5dp"
    android:padding="5dp">
    <TextView
        android:id="@+id/tv_state"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:rotation="40"
        android:textSize="18dp"
        android:layout_marginTop="10dp" />
    <ImageView
        android:background="@drawable/item_style"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv_picture"
        android:layout_centerVertical="true"/>
    <TextView
        android:textColor="@color/white"
        android:background="@color/zong"
        android:id="@+id/tv_name"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/iv_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/rili"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/iv_picture"
        android:layout_below="@+id/tv_name">
        <ImageView
            android:background="@color/zong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/rili" />
        <TextView
            android:textColor="@color/white"
            android:background="@color/zong"
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/zong"
        android:id="@+id/iv_zuobiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_picture"
        android:layout_below="@+id/rili"
        android:orientation="horizontal">
        <ImageView
            android:background="@color/zong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/iv_picture"
            android:layout_marginLeft="30dp"
            android:src="@drawable/zuobiao"/>
        <TextView
            android:textColor="@color/white"
            android:background="@color/zong"
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/zong"
        android:id="@+id/iv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/iv_picture"
        android:layout_below="@+id/iv_zuobiao">
        <ImageView
            android:background="@color/zong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/money"
            android:layout_marginLeft="30dp" />
        <TextView
            android:textColor="@color/white"
            android:background="@color/zong"
            android:id="@+id/tv_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/iv_picture"
        android:layout_below="@+id/iv_money">
        <LinearLayout
            android:background="@color/zong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:background="@color/zong"
                android:id="@+id/baoming"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/handup"/>
            <TextView
                android:textColor="@color/white"
                android:background="@color/zong"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/tv_apply"/>
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:background="@color/zong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:background="@color/zong"
                android:id="@+id/shoucang"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/xin"/>
            <TextView
                android:textColor="@color/white"
                android:background="@color/zong"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/tv_collect"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/fblx_linear6"
            android:id="@+id/btn_cancel"/>
    </RelativeLayout>
</LinearLayout>